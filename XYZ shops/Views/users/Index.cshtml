@model IEnumerable<XYZ_shops.Models.user>

@{

                ViewBag.Title = "Accounts";
                Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>Account Holders in XYZ shops pvt Ltd.</h3>
<br />
<table class="table" style="margin-bottom:100px;">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.user_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.mobile_no)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.email_id)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(model => item.user_id)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.password)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.mobile_no)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.email_id)
    </td>
    <td>
        @Html.ActionLink("Details", "Details", new { id = item.user_id })
    </td>
</tr>
}

</table>
